RM = rm -f

CC = gcc

distr :     CFLAGS =                    \
            -ansi                       \
            -pedantic                   \
            -Wall                       \
            -ffloat-store               \
            -fsigned-char               \
            -O                          \
            -DUNIX                      \
            -DV3_X11                    \
            -DWRK_STAT

            
debug :     CFLAGS =                    \
            -ansi                       \
            -Wall                       \
            -ffloat-store               \
            -fsigned-char               \
            -g3                         \
            -DDEBUG                     \
            -DUNIX                      \
            -DV3_X11                    \
            -DWRK_STAT

COMPILE = $(CC) -c $(CFLAGS)

include Makefile.IG

